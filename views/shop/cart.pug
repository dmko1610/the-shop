extends ../layouts/main-layout.pug

block styles

block content
  main
    if products.length > 0
      ul
        each p in products
          li
            p= `${p.productData.title} (${p.qty})`
            form(
              action="/cart-delete-item"
              method="POST"
            )
              input(
                type="hidden"
                value=`${p.productData._id}`
                name="productId"
              )
              button.btn(type="submit") Delete
    else
      h1 No Products in Cart!
