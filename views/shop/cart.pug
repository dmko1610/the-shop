extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet" href="/css/cart.css")

block content
  main
    if products.length > 0
      ul.cart__item-list
        each p in products
          li.cart__item
            h1
              p=`${p.title}`
            h2 Quantity: #{p=`${p.quantity}`}
            form(
              action="/cart-delete-item"
              method="POST"
            )
              input(
                type="hidden"
                value=`${p._id}`
                name="productId"
              )
              button.btn.danger(type="submit") Delete
      hr
      div.centered
        form(
          action="/create-order"
          method="POST"
        )
          button.btn(type="submit") Order Now!
    else
      h1 No Products in Cart!
